@{
    ViewData["Title"] = "Input Page";
}

            <main>
              
              <form id="submit-recipe" method="post" action="/recipe/submit">
                  <label for="recipename">Recipe Name:</label><br>
                  <input type="text" id="recipename" data-bind="value:recipe().name" placeholder="Enter recipe name..."><br>

                  
                  <label for="ingredients">Ingredients:</label><br>
                  <div id="ingredients" data-bind="foreach:recipe().ingredients">
                    <input type="text" id="ingredientname" data-bind="value:name" placeholder="Name">
                    <input type="text" id="ingredientamount" data-bind="value:amount" placeholder="Amount">
                    <input type="text" id="ingredientunits" data-bind="value:units" placeholder="Units"><br>
                  </div><br>
                    <input type="button" id="addingredientbutton" data-bind="click:addIngredient" value="Add ingredient"><br>
                  
                  <label for="instructions">Instructions:</label><br>
                  <div id="instructions" data-bind="foreach:recipe().instructions">
                    <span data-bind="text:stepnumber">1.</span>
                    <input type="text" id="instructiontext" data-bind="value:text" placeholder="Type instructions here">
                  </div><br>
                    <input type="button" id="addstepbutton" data-bind="click:addStep" value="Add step"><br>

                  <label for="authorsnotes">Author's Notes:</label><br>
                  <div id="authorsnotes">
                    <textarea type="text" id="authorstext" data-bind="value:recipe().authorsnotes" placeholder="Type a note about your recipe!"></textarea>
                  </div><br>

                  <label for="imgupload">Photo:</label><br>
                  <div id="photo">
                    <input type="file" id="imgupload" name="imgupload" accept="image/*">
                  </div><br>
                  <input type="submit" value="Submit Recipe" id="submit-recipe-button">
              </form>
              
            </main>