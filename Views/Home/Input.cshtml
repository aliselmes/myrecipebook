@{
    ViewData["Title"] = "Input Page";
}

            <main>
              
              <form id="submit-recipe" method="post" action="/recipe/submit">
                  <label for="recipename">Recipe Name:</label><br>
                  <input type="text" id="recipename" name="recipename" placeholder="Enter recipe name..."><br>

                  
                  <label for="ingredients">Ingredients:</label><br>
                  <div id="ingredients">
                    <input type="text" id="ingredientname" name="ingredientname" placeholder="Name">
                    <input type="text" id="ingredientamount" name="ingredientamount" placeholder="Amount">
                    <input type="text" id="ingredientunits" name="ingredientunits" placeholder="Units">
                    <input type="button" id="addingredientbutton" value="Add ingredient">
                  </div><br>
                  
                  <label for="instructions">Instructions:</label><br>
                  <div id="instructions">
                    <p>1.</p>
                    <input type="text" id="instructiontext" name="instructiontext" placeholder="Type instructions here">
                    <input type="button" id="addstepbutton" value="Add step">
                  </div><br>

                  <label for="authorsnotes">Author's Notes:</label><br>
                  <div id="authorsnotes">
                    <textarea type="text" id="authorstext" name="authorstext" placeholder="Type a note about your recipe!"></textarea>
                  </div><br>
                  
                  <input type="submit" value="Submit Recipe" id="submit-recipe-button">
              </form>
              
            </main>